<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Products</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>

<body>
    <%- include('navbar') %>

  <div class="container" style="margin-top: 5%;">
    
    <!-- Add Product Form -->
    <h2 class="text-center mb-4" style="color: cadetblue; font-size: 50px;">Manage Products</h2>
    <form action="/product/add-product" method="POST" class="mb-4">
      <div class="row" style="background-color: darkcyan; display: flex; border-radius: 40px; justify-content: center; padding: 20px 0;">
        <div class="col-md-4" style="margin: 1%; ">
          <input type="text" class="form-control" name="productName" placeholder="Enter product name" required>
        </div>
        <div class="col-md-4" style="margin: 1%;">
            <input type="number" class="form-control" name="productPrice" placeholder="Enter product price" required>
          </div>
        <div class="col-md-4" style="margin: 1%;">
          <input type="number" class="form-control" name="quantity" placeholder="Enter product quantity" required>
        </div>
        <div class="col-md-4" style="margin: 1%;">
          <input type="text" class="form-control" name="category" placeholder="Enter product category" required>
        </div>
       
        <div class="col-md-4" style="margin: 1%;">
          <button type="submit" class="btn  w-100" style="background-color: darkslategrey; color: aliceblue;">Add Product</button>
        </div>
      </div>
    </form>


    <table class="table  table-hover text-white" style=" border-radius: 40px;
">
      <thead>
        <tr>
          <th>Id</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>

        <tr>
          <td><%= product.p_id %></td>
          <td><%= product.product_name %></td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
          <td><%= product.category_name %></td>
         
          <td>
            <form action="/product/delete-product" method="POST" style="display: inline;">
              <input type="hidden" name="productId" value="<%= product.p_id %>">
              <button type="submit" class="btn btn-sm" style="background-color: salmon; color: aliceblue;">Delete</button>
            </form>

             
             <a class="btn btn-sm" style="background-color:cornflowerblue; color: aliceblue;" href="/product/update-product/<%= product.p_id %>">Update</a>
            </form>
          </td>
        </tr>
      </tbody>
      <% }) %>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

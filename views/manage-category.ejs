<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Categories</title>
    <link rel="stylesheet" href="/style.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('navbar') %>

    <div class="container manage-category">
      <h2 class="text-center mb-4" style="color: cadetblue; font-size: 50px;">Manage Categories</h2>

      <form action="/category/add-category" method="post" class="mb-4">
        <div class="row">
          <div class="col-md-8">
            <input
              type="text"
              class="form-control"
              id="categoryName"
              name="categoryName"
              placeholder="Enter category name"
              required
            />
          </div>
          <div class="col-md-4">
            <button type="submit" class="btn  w-100" style="background-color: lightseagreen; color: white;">
              Add Category
            </button>
          </div>
        </div>
      </form>

      <table class="table table-hover text-white">
        <thead>
          <tr>
            <th>Id</th>
            <th>Category Name</th>
            <th>Products</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(category => { %>

          <tr>
            <td><%= category.categoryId %></td>
            <td><%= category.categoryName %></td>
            <td><%= category.productCount %></td>
            <td>
              <form
                action="/category/delete-category"
                method="POST"
                style="display: inline"
              >
              <input type="hidden" name="categoryId" value="<%= category.categoryId %>">
              <button type="submit" class="btn btn-sm" style="background-color: salmon; color: aliceblue;">
                  Delete
                </button>
              </form>
              <a href="/category/update-category/<%= category.categoryId %>" class="btn btn-sm" style="background-color: cornflowerblue; color: aliceblue;">Update</a>
            </td>
          </tr>
        </tbody>
        <% }) %>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
